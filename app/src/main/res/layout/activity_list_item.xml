<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/azulPrincipal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivData"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="39dp"
            app:srcCompat="@drawable/ic_date_calendario"
            tools:ignore="VectorDrawableCompat"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="39dp" />

        <TextView
            android:id="@+id/tvData"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivData"
            android:text="10/1/2019"
            android:textColor="@color/branco"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/ivData" />

        <ImageView
            android:id="@+id/ivEstado"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ivData"
            android:layout_marginEnd="138dp"
            android:layout_marginRight="138dp"
            app:srcCompat="@drawable/ic_radio_button_estado"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="113dp"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/tvData"
            android:layout_marginStart="-138dp"
            android:layout_toEndOf="@+id/ivEstado"
            android:textColor="@color/branco"
            android:text="Em aberto"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginLeft="-138dp"
            android:layout_toRightOf="@+id/ivEstado" />

    </RelativeLayout>

</LinearLayout>