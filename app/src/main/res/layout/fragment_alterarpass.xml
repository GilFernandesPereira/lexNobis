<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azulPrincipal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/azulPrincipal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="139dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/teamwork" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="416dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="@color/branco"
            android:text="Introduza o seu email para lhe ser enviada a nova password."
            android:textSize="24sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etEmailParaEnviarPass"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@color/branco"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/etEmaiParaEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_action_utilizador"
                android:enabled="true"
                android:hint=" Email"
                android:inputType="textEmailAddress"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnEnviar"
            style="@android:style/Widget.Button"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="313dp"
            android:background="@drawable/background_creat_account"
            android:text="Enviar"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>