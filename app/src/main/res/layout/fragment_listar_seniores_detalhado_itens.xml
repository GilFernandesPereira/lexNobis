<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/azulPrincipal"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/azulPrincipal">

        <ImageView
            android:id="@+id/imgSeniorEditar"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_action_utilizador"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/btnEditarFotoSenior"
            style="@android:style/Widget.Button"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/background_creat_account"
            android:text="Editar Foto"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/azulPrincipal">


            <!-- Nome Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginBottom="-73dp">

                <EditText
                    android:id="@+id/etNomeSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_utilizador"
                    android:hint="Nome"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- NrTelemovel Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="73dp">

                <EditText
                    android:id="@+id/etNrTelemovelSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_action_nrtelemovel"
                    android:hint="Nrº Telemóvel"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Nif Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="146dp">

                <EditText
                    android:id="@+id/etNifSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_nif"
                    android:hint="Nif"
                    android:enabled="false"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Data de Nascimento Label +73-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="134dp"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="219dp">

                <EditText
                    android:id="@+id/etDataNascimentoSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_datanascimento"
                    android:hint="Data de Nascimento"
                    android:inputType="text"
                    android:enabled="false"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="292dp">

                <Spinner
                    android:id="@+id/spGeneroSeniorEditar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"></Spinner>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_action_genero" />


            </android.support.constraint.ConstraintLayout>

            <!-- Peso Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="355dp">

                <EditText
                    android:id="@+id/etPesoSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_peso"
                    android:hint="Peso"
                    android:inputType="text"
                    android:enabled="false"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Morada Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="501dp">

                <EditText
                    android:id="@+id/etMoradaSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_morada"
                    android:hint="Morada"
                    android:inputType="text"
                    android:enabled="false"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="428dp">

                <Spinner
                    android:id="@+id/spEstadoCivilSeniorEditar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent"></Spinner>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_action_utilizador" />
            </android.support.constraint.ConstraintLayout>

            <!-- CodigoPostal Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="574dp">

                <EditText
                    android:id="@+id/etCodigoPostalSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_codigopostal"
                    android:hint="Código-Postal"
                    android:inputType="text"
                    android:enabled="false"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- problemas de saude Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/branco"
                android:textColorHint="#434345"
                android:layout_marginTop="647dp">

                <EditText
                    android:id="@+id/etProblemasSaudeSeniorEditar"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:drawableLeft="@drawable/ic_action_doencas"
                    android:hint="Problemas de Saúde"
                    android:inputType="text"
                    android:enabled="false"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_height="69dp"
                android:layout_width="265dp"
                android:layout_marginTop="790dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btnEditarSenior"
                    style="@android:style/Widget.Button"
                    android:layout_width="245dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_creat_account"
                    android:text="Editar Senior"
                    android:textColor="#ffff"
                    android:textSize="16sp"></Button>

                <Button
                    android:id="@+id/btnDesativarSenior"
                    style="@android:style/Widget.Button"
                    android:layout_width="255dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_creat_account"
                    android:text="Desativar "
                    android:textColor="#ffff"
                    android:textSize="16sp"></Button>
            </LinearLayout>
            <!--<Button-->
            <!--android:id="@+id/btnEditarVoluntario"-->
            <!--style="@android:style/Widget.Button"-->
            <!--android:layout_width="265dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginTop="450dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@drawable/background_creat_account"-->
            <!--android:text="Editar Voluntário"-->
            <!--android:textColor="#ffff"-->
            <!--android:textSize="16sp" />-->
        </RelativeLayout>

    </ScrollView>

</LinearLayout>