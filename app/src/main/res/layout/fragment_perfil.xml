        android:textColorHint="#434345"
        app:layout_constraintBottom_toTopOf="@+id/btnEditarConta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/etCodigoPostalEditar"
            android:layout_width="match_parent"
