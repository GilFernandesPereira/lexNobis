<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d1e0e0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/azulPrincipal">

        <ImageView
            android:id="@+id/imgPaciente"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_action_utilizador"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/btnUploadFoto"
            style="@android:style/Widget.Button"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/background_creat_account"
            android:text="Carregar Foto"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulPrincipal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- Nome Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-73dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etNomePacienteParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_utilizador"
                    android:hint="Nome"
                    android:inputType="textEmailAddress"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- NrTelemovel Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="73dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etNrTelemovelParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_nrtelemovel"
                    android:hint="Nrº Telemóvel"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="441dp"
                android:background="@color/branco">

                <Spinner
                    android:id="@+id/spGeneroParticipante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"></Spinner>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_action_genero" />


            </android.support.constraint.ConstraintLayout>

            <!-- Peso Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="365dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etPesoParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_peso"
                    android:hint="Peso"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Nif Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="146dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etNifParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_nif"
                    android:hint="Nif"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Data de Nascimento Label +73-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="134dp"
                android:layout_marginTop="219dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etDataNascimentoParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_datanascimento"
                    android:hint="Data de Nascimento"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Morada Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="512dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etMoradaParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_morada"
                    android:hint="Morada"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Codigo-Postal Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="575dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etCodigoPostalParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_codigopostal"
                    android:hint="Código-Postal"
                    android:inputType="text"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <!-- Doencas Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="265dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="640dp"
                android:background="@color/branco">

                <EditText
                    android:id="@+id/etSaudeProblemasParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:drawableLeft="@drawable/ic_action_doencas"
                    android:hint="Problemas de Saúde"
                    android:inputType="text|textMultiLine"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnAddParticipante"
                style="@android:style/Widget.Button"
                android:layout_width="265dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="758dp"
                android:background="@drawable/background_creat_account"
                android:text="Adicionar Participante"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="292dp"
                android:background="@color/branco">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_action_utilizador" />

                <Spinner
                    android:id="@+id/spEstadoCivilParticipante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent"></Spinner>
            </android.support.constraint.ConstraintLayout>

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="790dp"-->
            <!--android:visibility="invisible"/>-->
        </RelativeLayout>
    </ScrollView>
</LinearLayout>